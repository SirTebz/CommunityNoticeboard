@model Post

<div class="card mb-3 @(Model.IsPinned ? "border-warning" : "")">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div class="flex-grow-1">
                <h5 class="card-title">
                    @if (Model.IsPinned)
                    {
                        <i class="bi bi-pin-angle-fill text-warning"></i>
                    }
                    <a asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-dark">
                        @Model.Title
                    </a>
                </h5>
                <p class="card-text text-muted small">
                    @Model.Content.Substring(0, Math.Min(150, Model.Content.Length))@(Model.Content.Length > 150 ? "..." : "")
                </p>
            </div>
            <span class="badge bg-primary ms-2">@Model.Category</span>
        </div>
        <div class="d-flex justify-content-between align-items-center mt-3">
            <small class="text-muted">
                <i class="bi bi-person"></i> @Model.User.UserName
                <span class="ms-2">
                    <i class="bi bi-clock"></i> @Model.CreatedAt.ToString("MMM dd, yyyy")
                </span>
            </small>
            <div>
                <span class="badge bg-secondary">
                    <i class="bi bi-chat"></i> @Model.Comments.Count
                </span>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary ms-2">
                    View Details <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>